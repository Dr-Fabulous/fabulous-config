# default editor
# env variable used to signal terminal buffers in nvim
if [ -z "${FABULOUS_NVIM_TERMINAL+1}" ]
then
	export VISUAL='nvim'
	export EDITOR="$VISUAL"
	export GIT_EDITOR="$VISUAL"
fi

# use gpg-agent for ssh
export GPG_TTY="$(tty)"
unset SSH_AGENT_PID

if [ "${gnupg_SSH_AUTH_SOCK:-0}" -ne "$$" ]
then
	export SSH_AUTH_SOCK="$(gpgconf --list-dirs agent-ssh-socket)"
fi

# bash specific plugins
if [ -n "${BASH_VERSION+1}" ]
then
	[ -f "$HOME/Projects/fabulous-config/shell/fzf-completion.bash" ] && . "$HOME/Projects/fabulous-config/shell/fzf-completion.bash"
	[ -f "$HOME/Projects/fabulous-config/shell/fzf-key-bindings.bash" ] && . "$HOME/Projects/fabulous-config/shell/fzf-key-bindings.bash"
fi

#vi filetype=sh
